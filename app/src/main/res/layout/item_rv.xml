<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"

    app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:background="@color/cardview_background">

        <ImageView
            android:id="@+id/id_rv_imageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/example_photo"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/id_rv_character_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название героя"
                style="@style/TextAppearance.AppCompat.Body2"
                android:textSize="22sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/id_rv_status_imageview"

                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_status"
                    app:tint="@color/red"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/id_rv_status_species"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dead - Human"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_known_location"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/id_rv_last_known_location"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Последняя локация"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_seen_in"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/id_rv_first_seen_in"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Впервые был увиден в текст длинный очень ааа"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>